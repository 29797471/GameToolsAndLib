<UserControl x:Class="WinCore.RichTextUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCore"
             mc:Ignorable="d" 
             x:Name="self">
    <UserControl.Resources>
        <Span x:Key="ResSpan" x:Shared="False" >
            <Run Text="{Binding Text,Mode=OneWay}" />
            <Hyperlink Click="Hyperlink_Click">
                <Run Text="{Binding UnderlineText,Mode=OneWay}" />
            </Hyperlink >
        </Span>
    </UserControl.Resources>
    <Border BorderThickness="1" CornerRadius="1" BorderBrush="#e0e0e0" >
        <TextBlock x:Name="tb" TextWrapping="Wrap" Margin="5" DataContext="{Binding ElementName=self,Path=ItemsSource}"/>
    </Border>
