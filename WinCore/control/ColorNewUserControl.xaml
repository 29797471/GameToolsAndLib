<UserControl x:Class="WinCore.ColorNewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCore"
             mc:Ignorable="d" x:Name="self">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,5" >
            <Border  Width="50" Height="25"  Margin="10,0" MouseLeftButtonUp="Button_Click">
                <Border.Background>
                    <SolidColorBrush Color="{Binding ElementName=self,Path=WindowsMediaColor}"/>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#00000000"/>
                </Border.Effect>
            </Border>
            <Slider x:Name="slider" Value="0" Minimum="0" Maximum="255" Width="150" Margin="5,0" VerticalAlignment="Center" ValueChanged="slider_ValueChanged"/>
            <Label x:Name="label" Content="{Binding ElementName=slider, Path=Value}" Width="50"/>
        </StackPanel>
    </Grid>
</UserControl>
